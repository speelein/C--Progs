<Window x:Class="DmToEuro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DmToEuro"
        mc:Ignorable="d"
        Title="DM → Euro" Height="200" Width="510">
    <Grid>
        <Label Content="DM:" HorizontalAlignment="Left" Margin="40,40,0,0" VerticalAlignment="Top" Width="50"/>
        <TextBox x:Name="eingabe" HorizontalAlignment="Left" Height="23" Margin="95,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Euro:" HorizontalAlignment="Left" Margin="290,40,0,0" VerticalAlignment="Top" Width="50"/>
        <Label x:Name="ausgabe" Content="" Margin="345,40,40,0" VerticalAlignment="Top" BorderThickness="1" BorderBrush="Black"/>
        <Button Content="Konvertieren" HorizontalAlignment="Left" Margin="95,108,0,0" VerticalAlignment="Top" Width="120" IsDefault="True" Click="Button_Click"/>
    </Grid>
</Window>
