<Window x:Class="BruchKürzenGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BruchKürzenGui"
        mc:Ignorable="d"
        Title="Kürzen von Brüchen" Height="282" Width="294" Loaded="Window_Loaded">
    <Grid Margin="0,0,2,4">
        <TextBox x:Name="numTb" Margin="82,39,0,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" TextAlignment="Center"/>
        <TextBox x:Name="denomTb" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Margin="82,125,0,0" TextAlignment="Center" HorizontalAlignment="Left" Width="120"/>
        <Label x:Name="label" Content="----------------------------" HorizontalAlignment="Left" Margin="82,80,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="reduceBtn" Content="Kürzen" HorizontalAlignment="Left" Margin="45,185,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" Click="reduceBtn_Click"/>
        <Button x:Name="closeBtn" Content="Beenden" Margin="165,185,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.298,0" HorizontalAlignment="Left" Width="75" Click="closeBtn_Click"/>

    </Grid>
</Window>
